                <div class="viewed-products-info">
                    <div class="viewed-product-name">
                        <p><a href="#" class="viewed-product-item-link">LG G6 H870DS</a></p>
                    </div>
                    <div class="viewed-product-price">
                        <p>$ 670</p>
                    </div>
                </div>
            </div>
            <!-- 4 -->
            <div class="viewed-products-list-item">
                <div class="viewed-products-image">
                    <img src="/Content/Images/Goods/viewedProduct4.png" />
                </div>
                <div class="viewed-products-info">
                    <div class="viewed-product-name">
                        <p><a href="#" class="viewed-product-item-link">Asus ZenFone</a></p>
                    </div>
                    <div class="viewed-product-price">
                        <p>$ 670</p>
                    </div>
                </div>
            </div>
            <!--  -->
        </div>
    </div>
</div>
